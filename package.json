  "scripts": {
    "prebuild": "rimraf dist",
    "build": "NODE_ENV=prod nest build",
    "deploy": "pnpm prebuild && pnpm build && pm2 restart server.json",
    "deploy:install": "pnpm install pnpm prebuild && && pnpm build && pm2 restart server.json",
    "format": "prettier --write \"src/**/*.ts\" \"test/**/*.ts\"",
    "start": "NODE_ENV=staging nest start",
    "start:dev": "NODE_ENV=dev nest start --watch",
    "start:debug": "NODE_ENV=debug nest start --debug --watch",
    "start:prod": "NODE_ENV=prod node dist/main",
    "start:infra:mail": "./scripts/start-maildev.sh",
    "start:infra:rabbit": "./scripts/start-rabbitmq.sh",
    "start:infra:redis": "./scripts/start-redis.sh",
    "start:infra:pg": "./scripts/start-pgsql.sh",
    "start:infra:mssql": "./scripts/start-mssql.sh",
    "start:infra": "./scripts/start-maildev.sh && ./scripts/start-rabbitmq.sh && ./scripts/start-redis.sh && ./scripts/start-pgsql.sh",
    "lint": "eslint \"{src,apps,libs,test}/**/*.ts\" --fix",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:cov": "jest --coverage",
    "test:debug": "node --inspect-brk -r tsconfig-paths/register -r ts-node/register node_modules/.bin/jest --runInBand",
    "test:e2e": "jest --config ./test/jest-e2e.json"
  },
